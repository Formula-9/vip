{{#if mariages}}
<div class="infosMariages">
    <h4>Mariage(s):</h4>
    {{#each mariages}}
        <p>
        <a href="/repertoire/vip/{{this.conjoint}}">{{this.prenomConjoint}} {{this.nomConjoint}}</a>
        ({{formatDate this.dateMariage 'MMMM YYYY'}}{{#if this.finMariage}} --> {{formatDate this.finMariage 'MMMM YYYY'}}{{/if}})
        <strong>Lieu:</strong>
        {{this.lieu}}
        </p>
    {{/each}}
</div>
{{/if}}